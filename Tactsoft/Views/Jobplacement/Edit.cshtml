@model Tactsoft.Core.Entities.Jobplacement

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h4 class="m-0">@ViewData["Title"]</h4>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Dashboard">Dashboard</a></li>
                        <li class="breadcrumb-item active">@ViewData["Title"]</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <section class="content">
        <div class="container-fluid">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Add New Jobplacement</h3>
                </div>
                <form asp-action="Edit" enctype="multipart/form-data">
                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row mt-2">
                            <div class="col-md-6">
                                <div class="row mb-2">

                                    <label asp-for="Designation" class="col-md-3 col-form-label"></label>
                                    <div class="col-md-9">
                                        <input asp-for="Designation" class="form-control" />
                                        <span asp-validation-for="Designation" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <label asp-for="DateOfJoining" class="col-md-3 col-form-label"></label>
                                    <div class="col-md-9">
                                        <input asp-for="DateOfJoining" class="form-control" />
                                        <span asp-validation-for="DateOfJoining" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <label asp-for="Salary" class="col-md-3 col-form-label"></label>
                                    <div class="col-md-9">
                                        <input asp-for="Salary" class="form-control" />
                                        <span asp-validation-for="Salary" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <label asp-for="DepartmentId" class="col-md-3 col-form-label"></label>
                                    <div class="col-md-9">
                                        <select asp-for="DepartmentId" class="form-control" asp-items="ViewBag.DepartmentId">
                                            <option value="">Select Department</option>
                                        </select>
                                        <span asp-validation-for="DepartmentId" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <label asp-for="OrganizationId" class="col-md-3 col-form-label"></label>
                                    <div class="col-md-9">
                                        <select asp-for="OrganizationId" class="form-control" asp-items="ViewBag.OrganizationId">
                                            <option value="">Select Organization</option>
                                        </select>
                                        <span asp-validation-for="OrganizationId" class="text-danger"></span>
                                    </div>
                                </div>


                            </div>
                            <div class="col-md-6">
                                <div class="row mb-2">
                                    <label asp-for="StudentId" class="col-md-3 col-form-label"></label>
                                    <div class="col-md-9">
                                        <input asp-for="StudentId" class="form-control" />
                                        <span asp-validation-for="StudentId" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <label asp-for="Remarks" class="col-md-3 col-form-label"></label>
                                    <div class="col-md-9">
                                        <input asp-for="Remarks" class="form-control" />
                                        <span asp-validation-for="Remarks" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card-footer">
                        <div style="text-align:end">
                            <a class="btn btn-outline-danger btn-sm" asp-action="Index">
                                <i class="far fa-window-close"></i> Cancel
                            </a>
                            <button type="submit" value="Create" class="btn btn-outline-primary btn-sm">
                                <i class="far fa-save"></i> Save
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
