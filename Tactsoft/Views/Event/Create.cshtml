@model Tactsoft.Core.Entities.Event
@using Tactsoft.Core.Defaults
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h4 class="m-0">@ViewData["Title"]</h4>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Dashboard">Dashboard</a></li>
                        <li class="breadcrumb-item active">@ViewData["Title"]</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <section class="content">
        <div class="container-fluid">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Add New Event</h3>
                </div>
                <form asp-action="Create" asp-controller="Event" enctype="multipart/form-data">
                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row mt-2">
                            <div class="col-md-6">
                                <div class="row mb-2">
                                    <label asp-for="EventName" class="col-md-3 col-form-label"></label>
                                    <div class="col-md-9">
                                        <input asp-for="EventName" class="form-control" />
                                        <span asp-validation-for="EventName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <label asp-for="EventDescription" class="col-md-3 col-form-label"></label>
                                    <div class="col-md-9">
                                        <input type="text" asp-for="EventDescription" class="form-control"  />
                                        <span asp-validation-for="EventDescription" class="text-danger"></span>
                                    </div>
                                </div>                                                                                                                   
                             <div class="row mb-2">
                                    <label asp-for="EventPicture" class="col-md-3 col-form-label"></label>
                                    <div class="col-md-9">
                                        <input type="file" asp-for="EventPicture" class="form-control" name="eventPictureFile" accept="image/*" id="FileUpload" onchange="PreviewImage()" />
                                        <span asp-validation-for="EventPicture" class="text-danger"></span>
                                    </div>
                                    <div class="mt-3" style="text-align:end">
                                        <img src="~/admin-lte/img/boxed-bg.jpg" alt="img" id="UploadFile" class="img-thumbnail" style="width:150px;" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card-footer">
                        <div style="text-align:end">
                            <a class="btn btn-outline-danger btn-sm" asp-action="Index">
                                <i class="far fa-window-close"></i> Cancel
                            </a>
                            <button type="submit" value="Create" class="btn btn-outline-primary btn-sm">
                                <i class="far fa-save"></i> Save
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
        
    }