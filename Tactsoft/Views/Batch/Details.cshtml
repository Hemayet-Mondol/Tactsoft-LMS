@model Tactsoft.Core.Entities.Batch

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h4 class="m-0">@ViewData["Title"]</h4>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Dashboard">Dashboard</a></li>
                        <li class="breadcrumb-item active">@ViewData["Title"]</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <section class="content">
        <div class="container-fluid">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex justify-content-between">
                        <h3 class="card-title">Batch Details</h3>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-8">
                            <dl class="row">
                                <dt class="col-md-3">
                                    @Html.DisplayNameFor(model => model.BatchName)
                                </dt>
                                <dd class="col-md-9">
                                    @Html.DisplayFor(model => model.BatchName)
                                </dd>
                                <dt class="col-md-3">
                                    @Html.DisplayNameFor(model => model.BatchNumber)
                                </dt>
                                <dd class="col-md-9">
                                    @Html.DisplayFor(model => model.BatchNumber)
                                </dd>
                                <dt class="col-md-3">
                                    @Html.DisplayNameFor(model => model.Slote)
                                </dt>
                                <dd class="col-md-9">
                                    @Html.DisplayFor(model => model.Slote)
                                </dd>
                                <dt class="col-md-3">
                                    @Html.DisplayNameFor(model => model.BatchStatus)
                                </dt>
                                <dd class="col-md-9">
                                    @Html.DisplayFor(model => model.BatchStatus)
                                </dd>
                                <dt class="col-md-3">
                                    @Html.DisplayNameFor(model => model.StartDate)
                                </dt>
                                <dd class="col-md-9">
                                    @Html.DisplayFor(model => model.StartDate)
                                </dd>
                                <dt class="col-md-3">
                                    @Html.DisplayNameFor(model => model.EndDate)
                                </dt>
                                <dd class="col-md-9">
                                    @Html.DisplayFor(model => model.EndDate)
                                </dd>
                                <dt class="col-md-3">
                                    @Html.DisplayNameFor(model => model.Remarks)
                                </dt>
                                <dd class="col-md-9">
                                    @Html.DisplayFor(model => model.Remarks)
                                </dd>
                                <dt class="col-md-3">
                                    @Html.DisplayNameFor(model => model.CourseId)
                                </dt>
                                <dd class="col-md-9">
                                    @Html.DisplayFor(model => model.Course.CourseName)
                                </dd>
                                <dt class="col-md-3">
                                    @Html.DisplayNameFor(model => model.ClassRoomId)
                                </dt>
                                <dd class="col-md-9">
                                    @Html.DisplayFor(model => model.ClassRoom.ClassRoomNumber)
                                </dd>
                                <dt class="col-md-3">
                                    @Html.DisplayNameFor(model => model.TrainerId)
                                </dt>
                                <dd class="col-md-9">
                                    @Html.DisplayFor(model => model.Trainer.TrainerName)
                                </dd>
                                <dt class="col-md-3">
                                    @Html.DisplayNameFor(model => model.VenueId)
                                </dt>
                                <dd class="col-md-9">
                                    @Html.DisplayFor(model => model.Venue.VenuName)
                                </dd>
                            </dl>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="d-flex justify-content-end">

                        <a class="btn btn-outline-danger btn-sm mr-2" asp-action="Index">
                            <i class="far fa-window-close"></i> Cancel
                        </a>
                        <a class="btn btn-outline-primary btn-sm me-3" asp-action="Edit" asp-route-id="@Model?.Id">
                            <i class="fa-regular fa-pen-to-square"></i> Edit
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>





