@model Tactsoft.Core.Entities.ClassVideo

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Create</h1>

<h4>ClassVideo</h4>
<hr />

<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h4 class="m-0">@ViewData["Title"]</h4>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Dashboard">Dashboard</a></li>
                        <li class="breadcrumb-item active">@ViewData["Title"]</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <section class="content  m-auto w-75">
        <div class="container-fluid">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Add New Lesson</h3>
                </div>
                <form asp-action="Create" enctype="multipart/form-data">

                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group">
                            <label asp-for="VideoFileName" class="control-label"></label>
                            <input asp-for="VideoFileName" class="form-control" />
                            <span asp-validation-for="VideoFileName" class="text-danger"></span>
                        </div>
                       
                        <div class="form-group">
                            <input type="file" asp-for="VideoUrl" class="form-control" name="videoFile" accept="/*" id="FileUpload" />
                            <span asp-validation-for="VideoUrl" class="text-danger"></span>
                        </div>
                        <div class="row mb-2">
                            <label asp-for="LessonId" class="col-md-3 col-form-label"></label>
                            <div class="col-md-9">
                                <select asp-for="LessonId" class="form-control" asp-items="ViewBag.LessonId">
                                    <option value="">Select Lesson</option>
                                </select>
                                <span asp-validation-for="LessonId" class="text-danger"></span>
                            </div>
                        </div>


                    </div>

                    <div class="card-footer">
                        <div style="text-align:end">
                            <a class="btn btn-outline-danger btn-sm" asp-action="Index">
                                <i class="far fa-window-close"></i> Cancel
                            </a>
                            <button type="submit" value="Create" class="btn btn-outline-primary btn-sm">
                                <i class="far fa-save"></i> Save
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
