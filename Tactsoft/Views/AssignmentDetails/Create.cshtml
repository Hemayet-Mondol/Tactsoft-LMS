@model Tactsoft.Core.Entities.AssignmentDetails

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h4 class="m-0">@ViewData["Title"]</h4>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Dashboard">Dashboard</a></li>
                        <li class="breadcrumb-item active">@ViewData["Title"]</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <section class="content  m-auto w-75">
        <div class="container-fluid">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Add New Assignment Deatils</h3>
                </div>
                <form asp-action="Create" enctype="multipart/form-data">

                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group">
                            <label asp-for="AssignmentId" class="control-label"></label>
                            <input type="text" asp-for="AssignmentId" class="form-control" />
                            <span asp-validation-for="AssignmentId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="StudentId" class="control-label"></label>

                            <input asp-for="StudentId" class="form-control" />
                            <span asp-validation-for="StudentId" class="text-danger"></span>

                        </div>
                        <div class="form-group">
                            <label asp-for="AssignmentAttachment" class="control-label"></label>
                            <input type="file" asp-for="AssignmentAttachment" class="form-control" name="assignmentAttachmentpdfFile" accept="/*"  id="FileUpload" onchange="PreviewFile()" />

                            <span asp-validation-for="AssignmentAttachment" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Marks" class="control-label"></label>

                            <input type="number" asp-for="Marks" class="form-control" />
                            <span asp-validation-for="Marks" class="text-danger"></span>

                        </div>
                        
                    </div>
                    <div class="card-footer">
                        <div style="text-align:end">
                            <a class="btn btn-outline-danger btn-sm" asp-action="Index">
                                <i class="far fa-window-close"></i> Cancel
                            </a>
                            <button type="submit" value="Create" class="btn btn-outline-primary btn-sm">
                                <i class="far fa-save"></i> Save
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
