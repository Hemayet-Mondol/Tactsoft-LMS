@model Tactsoft.Core.Entities.Trainer
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h4 class="m-0">@ViewData["Title"]</h4>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Dashboard">Dashboard</a></li>
                        <li class="breadcrumb-item active">@ViewData["Title"]</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <section class="content">
        <div class="container-fluid">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Update Trainer Information</h3>
                </div>
                <form asp-action="Edit" enctype="multipart/form-data">
                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="row mt-2">
                            <div class="col-md-6">
                                <div class="row mb-2">
                                    <label asp-for="TrainerName" class="col-md-3 col-form-label"></label>
                                    <div class="col-md-9">
                                        <input asp-for="TrainerName" type="text" class="form-control" />
                                        <span asp-validation-for="TrainerName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <label asp-for="AboutTrainer" class="col-md-3 col-form-label"></label>
                                    <div class="col-md-9">
                                        <input asp-for="AboutTrainer" type="text" class="form-control" />
                                        <span asp-validation-for="AboutTrainer" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <label asp-for="Address" class="col-md-3 col-form-label"></label>
                                    <div class="col-md-9">
                                        <input asp-for="Address" type="text" class="form-control" />
                                        <span asp-validation-for="Address" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <label asp-for="Phone" class="col-md-3 col-form-label"></label>
                                    <div class="col-md-9">
                                        <input asp-for="Phone" type="text" class="form-control" />
                                        <span asp-validation-for="Phone" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <label asp-for="Email" class="col-md-3 col-form-label"></label>
                                    <div class="col-md-9">
                                        <input asp-for="Email" type="email" class="form-control" />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                </div>


                                <div class="row mb-2">
                                    <label asp-for="DateOfBirth" class="col-md-3 col-form-label"></label>
                                    <div class="col-md-9 pt-2">
                                        <input asp-for="DateOfBirth" type="date" class="form-control" />
                                        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <label asp-for="JoiningDate" class="col-md-3 col-form-label"></label>
                                    <div class="col-md-9">
                                        <input asp-for="JoiningDate" type="date" class="form-control" />
                                        <span asp-validation-for="JoiningDate" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <label asp-for="LastAcademicInfo" class="col-md-3 col-form-label"></label>
                                    <div class="col-md-9">
                                        <input asp-for="LastAcademicInfo" type="text" class="form-control" />
                                        <span asp-validation-for="LastAcademicInfo" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <label asp-for="Experience" class="col-md-3 col-form-label"></label>
                                    <div class="col-md-9">
                                        <input asp-for="Experience" type="text" class="form-control" />
                                        <span asp-validation-for="Experience" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <label asp-for="Expertise" class="col-md-3 col-form-label"></label>
                                    <div class="col-md-9">
                                        <input asp-for="Expertise" type="text" class="form-control" />
                                        <span asp-validation-for="Expertise" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <label asp-for="CV" class="col-md-3 col-form-label"></label>
                                    <div class="col-md-9">
                                        <input type="file" asp-for="CV" class="form-control" name="CVFile" />
                                        <span asp-validation-for="CV" class="text-danger"></span>
                                    </div>
                                </div>

                            </div>
                            <div class="col-md-6">

                                <div class="row mb-3">
                                    <label asp-for="Picture" class="col-md-3 col-form-label"></label>
                                    <div class="col-md-9">
                                        <input type="file" asp-for="Picture" class="form-control" name="pictureFile" accept="image/*" id="FileUpload" onchange="PreviewImage()" />
                                        <span asp-validation-for="Picture" class="text-danger"></span>
                                    </div>
                                    <div class="mt-3" style="text-align:end">
                                        <img src="~/images/trainer/@Model.Picture" alt="img" id="UploadFile" class="img-thumbnail" style="width:170px;" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card-footer">
                        <div style="text-align:end">
                            <a class="btn btn-outline-danger btn-sm" asp-action="Index">
                                <i class="far fa-window-close"></i> Cancel
                            </a>
                            <button type="submit" value="Create" class="btn btn-outline-primary btn-sm">
                                <i class="fa-solid fa-rotate"></i> Update
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }



